# FreshRSS configuration
FRESHRSS_DB_PATH=/path/to/freshrss/db.sqlite
USERNAME=your_username
HOURS_BACK=8

# AI API configuration
AI_API_KEY=your_api_key_here
GEMINI_STAGE2_MODEL_ID=stage2_model_name
GEMINI_STAGE1_MODEL_ID=stage1_model_name_optional
AI_BASE_URL=https://api.example.com/api/v3

# Telegram configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Telegraph configuration (optional, will auto-create if not set)
TELEGRAPH_ACCESS_TOKEN=your_telegraph_token_here

# Optional: Schedule configuration
SCHEDULE_INTERVAL_HOURS=8 # How often to run the digest 

# Stage-1 concurrency (per-article API calls)
STAGE1_MAX_WORKERS=20
